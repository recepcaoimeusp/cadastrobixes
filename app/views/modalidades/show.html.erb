<h2>Bixos na modalidade</h2>

<div class="grid">
  <% @modalidade.bixes.each_with_index do |b, i| %>
    <div class="row list-item-<%= i % 2 %>">
      <%= link_to bixe_path(b.id) do %>
        <h4>
          <div class="col-md-4">
            <%= b.nome %>
          </div>
          <div class="col-md-4">
            <%= b.email %>
          </div>
          <div class="col-md-4">
            <%= b.telefone %>
          </div>
        </h4>
      <% end %>
    </div>
  <% end %>
</div>
